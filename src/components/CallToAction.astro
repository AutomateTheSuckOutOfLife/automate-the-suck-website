---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonUrl: string;
}

const { title, description, buttonText, buttonUrl } = Astro.props;
---

<div class="bg-primary dark:bg-dark-primary rounded-lg p-8 text-center">
  <h3 class="text-2xl font-serif font-bold text-white dark:text-dark-text mb-4">{title}</h3>
  <p class="text-white dark:text-dark-text mb-6">
    {description}
  </p>
  <a href={buttonUrl} class="inline-block bg-secondary text-white px-8 py-3 rounded-full font-semibold hover:bg-button-hover transition-colors dark:bg-link-dark-base dark:text-dark-background dark:hover:bg-link-dark-hover">
    {buttonText}
  </a>
</div> 