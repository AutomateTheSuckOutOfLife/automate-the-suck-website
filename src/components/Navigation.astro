---
import ThemeToggle from './ThemeToggle';
import MobileMenu from './MobileMenu';
import WordMark from '../assets/word-mark.svg?url';

const navItems = [
  { href: '#about', label: 'About' },
  { href: '#projects', label: 'Projects' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-40 border-b border-primary/10 bg-background/80 dark:bg-dark-background/80 backdrop-blur-sm">
  <nav class="max-w-4xl mx-auto px-4 py-3 flex justify-between items-center">
    <div>
      <a href="/" class="block">
        <img 
          src={WordMark} 
          alt="AST Logo" 
          class="text-primary dark:text-dark-text"
          style="height: 48px; width: auto; filter: var(--svg-filter);"
        />
      </a>
    </div>

    <div class="flex items-center gap-4">
      <ThemeToggle client:load />
    </div>
  </nav>
</header>

<MobileMenu client:load items={navItems} />