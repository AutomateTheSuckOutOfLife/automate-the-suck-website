---
import ThemeToggle from './ThemeToggle';
import MobileMenu from './MobileMenu';
import WordMarkLight from '../assets/word-mark.svg?url';
import WordMarkDark from '../assets/darkmode-wordmark.svg?url';

const navItems = [
  { href: '/about', label: 'About' },
  { href: '/projects', label: 'Projects' },
  { href: '/writing', label: 'Writing' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-40 border-b border-primary/10 bg-background/80 dark:bg-dark-background/80 backdrop-blur-sm">
  <nav class="max-w-4xl mx-auto px-4 py-3 flex justify-between items-center">
    <div>
      <a href="/" class="block">
        <img 
          src={WordMarkLight} 
          alt="AST Logo" 
          class="block dark:hidden"
          style="height: 48px; width: auto; filter: var(--svg-filter);"
        />
        <img 
          src={WordMarkDark} 
          alt="AST Logo" 
          class="hidden dark:block"
          style="height: 48px; width: auto; filter: var(--svg-filter);"
        />
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center space-x-8">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="text-accent dark:text-dark-accent hover:text-primary dark:hover:text-dark-primary transition-colors"
        >
          {item.label}
        </a>
      ))}
    </div>

    <div class="flex items-center gap-4">
      <ThemeToggle client:load />
      <MobileMenu client:load items={navItems} />
    </div>
  </nav>
</header>
