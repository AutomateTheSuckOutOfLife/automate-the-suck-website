---
interface Props {
  type?: 'info' | 'warning' | 'success' | 'error';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: {
    bg: 'bg-button-light dark:bg-dark-primary/30',
    border: 'border-primary dark:border-link-dark-base',
    icon: 'üí°',
    title: title || 'Information'
  },
  warning: {
    bg: 'bg-amber-50 dark:bg-amber-900/30',
    border: 'border-amber-500 dark:border-amber-400',
    icon: '‚ö†Ô∏è',
    title: title || 'Warning'
  },
  success: {
    bg: 'bg-green-50 dark:bg-green-900/30',
    border: 'border-green-500 dark:border-green-400',
    icon: '‚úÖ',
    title: title || 'Success'
  },
  error: {
    bg: 'bg-red-50 dark:bg-red-900/30',
    border: 'border-red-500 dark:border-red-400',
    icon: '‚ùå',
    title: title || 'Error'
  }
};

const currentStyle = styles[type];
---

<div class={`p-4 ${currentStyle.bg} border-l-4 ${currentStyle.border} rounded my-6`}>
  <div class="flex items-start">
    <span class="text-xl mr-3" aria-hidden="true">{currentStyle.icon}</span>
    <div>
      <p class="font-medium text-lg">{currentStyle.title}</p>
      <div class="mt-2 text-accent dark:text-dark-text">
        <slot />
      </div>
    </div>
  </div>
</div>