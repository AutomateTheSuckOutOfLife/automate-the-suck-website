---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal portfolio website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;500;600&family=Roboto+Slab:wght@400;500;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return 'light';
      })();
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-background dark:bg-dark-background transition-colors duration-300 min-h-screen">
    <div class="transition-all duration-300 ease-in-out">
      <Navigation />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    overflow-x: hidden;
  }

  /* Enhanced dark mode override with increased specificity */
  html.dark,
  html.dark body,
  html.dark p,
  html.dark span,
  html.dark h1,
  html.dark h2,
  html.dark h3,
  html.dark h4,
  html.dark h5,
  html.dark h6,
  html.dark a,
  html.dark li,
  html.dark div,
  html.dark button {
    color: #FAFFFB !important;
  }

  /* Override link colors explicitly */
  html.dark a, html.dark a:visited, html.dark a:hover, html.dark a:focus {
    color: #FAFFFB !important;
  }
</style>