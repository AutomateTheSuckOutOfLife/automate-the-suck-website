---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Automate The Suck">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-serif font-bold text-accent mb-12">Get in Touch</h1>
    
    <div class="text-lg text-accent leading-relaxed mb-12">
      <p>
        We'd love to hear from you! Whether you have questions about our projects, want to collaborate, 
        or just want to say hello, please feel free to reach out using the form below or via email.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-5 gap-12">
      <div class="md:col-span-3">
        <form class="space-y-8">
          <div>
            <label for="name" class="block text-lg font-medium text-accent mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 rounded-lg border border-primary bg-white text-accent placeholder-accent/60 focus:outline-none focus:border-secondary"
              required
            />
          </div>

          <div>
            <label for="email" class="block text-lg font-medium text-accent mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-lg border border-primary bg-white text-accent placeholder-accent/60 focus:outline-none focus:border-secondary"
              required
            />
          </div>
          
          <div>
            <label for="subject" class="block text-lg font-medium text-accent mb-2">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              class="w-full px-4 py-3 rounded-lg border border-primary bg-white text-accent placeholder-accent/60 focus:outline-none focus:border-secondary"
              required
            />
          </div>

          <div>
            <label for="message" class="block text-lg font-medium text-accent mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              class="w-full px-4 py-3 rounded-lg border border-primary bg-white text-accent placeholder-accent/60 focus:outline-none focus:border-secondary"
              required
            ></textarea>
          </div>

          <div class="pt-4">
            <button
              type="submit"
              class="px-12 py-3 bg-primary text-white rounded-full font-medium hover:bg-secondary transition-colors"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
      
      <div class="md:col-span-2">
        <div class="bg-[#FFE5F4] rounded-lg p-8 sticky top-24">
          <h2 class="text-2xl font-serif font-bold text-accent mb-6">Contact Information</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-medium text-primary mb-2">Email</h3>
              <div class="font-mono text-accent text-sm whitespace-nowrap overflow-x-auto pb-1">
                <div class="mb-1">dylan@automatethesuck.org</div>
                <div>kaitlin@automatethesuck.org</div>
              </div>
            </div>
            
            <div>
              <h3 class="font-medium text-primary mb-2">Location</h3>
              <p class="text-accent">
                Buffalo, NY<br />
                United States
              </p>
            </div>
            
            <div>
              <h3 class="font-medium text-primary mb-2">Follow Us</h3>
