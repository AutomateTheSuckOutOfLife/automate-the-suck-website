---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent | Automate The Suck">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <div class="text-center">
      <div class="mb-8 inline-block">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary dark:text-link-dark-base" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-accent dark:text-dark-text mb-6">Message Sent!</h1>
      
      <p class="text-xl text-accent dark:text-dark-text mb-12">
        Thank you for reaching out. We've received your message and will get back to you as soon as possible.
      </p>
      
      <div class="flex justify-center gap-6">
        <a 
          href="/" 
          class="px-8 py-3 bg-primary text-white rounded-full font-semibold hover:bg-secondary transition-colors dark:bg-link-dark-base dark:text-dark-background dark:hover:bg-link-dark-hover"
        >
          Return Home
        </a>
        
        <a 
          href="/projects" 
          class="px-8 py-3 bg-secondary text-white rounded-full font-semibold hover:bg-button-hover transition-colors dark:bg-link-dark-base dark:text-dark-background dark:hover:bg-link-dark-hover"
        >
          Explore Projects
        </a>
      </div>
    </div>
  </div>
</Layout> 