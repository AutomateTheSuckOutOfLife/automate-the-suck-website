<script>
  // Toggle functionality for the setup instructions
  document.addEventListener('astro:page-load', () => {
    const setupToggle = document.getElementById('setup-toggle');
    const setupContent = document.getElementById('setup-content');
    const chevronIcon = document.getElementById('chevron-icon');
    
    if (setupToggle && setupContent && chevronIcon) {
      setupToggle.addEventListener('click', () => {
        setupContent.classList.toggle('hidden');
        chevronIcon.classList.toggle('rotate-180');
        
        // Add aria attributes for accessibility
        const isExpanded = !setupContent.classList.contains('hidden');
        setupToggle.setAttribute('aria-expanded', isExpanded.toString());
      });
      
      // Set initial aria attributes
      setupToggle.setAttribute('aria-expanded', 'false');
      setupToggle.setAttribute('aria-controls', 'setup-content');
    }
  });
</script> 